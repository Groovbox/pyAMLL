ProgressBar {
  margin-right: 1;
  margin-left: 1;
}

ProgressBar > Vertical {
  margin-top: 1;
}

ProgressBar > Bar {
  width: 1fr;
}

#position_control > Button {
  max-width:10%;
  border: none;
}

Digits {
  width: auto;
}

Horizontal {
    height: auto;
}

FileNamePicker {
    align: center middle;
}

#file-picker-label {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#file-picker-input {
    column-span: 2;
}

#dialog {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 13;
    border: thick $background 80%;
    background: $surface;
}



Sidebar {
    dock: left;
    width: auto;
    margin: 0 1 0 0;
  }
  
  Sidebar > Button {
    background: #0d1117;
    width: 100%;
  }

  Sidebar > Button:disabled {
    background:rgb(160, 160, 160);
    color: #0d1117;
  }
  
  Sidebar.-hidden {
    display: none;
  }

PlayerBox {

    padding: 0 1;
    height: 5;
    border: thick $background 80%;
    background: $surface;
    dock: bottom;
    align-vertical: middle;
}

#seek_buttons, #speed_controls {
  width: auto;
  margin-right: 1;
}

#total_time {
  margin-right:1;
  margin-left: 1;
  margin-top: 1;
}

PlayerBox > Button, #seek_buttons > Button, #speed_controls > Button {
    max-width: 4;
}

.button_group {
  width: auto;
}

.button_group > Button {
  background: #0d1117;
    max-width: 4;
}

#speed_reset {
  max-width:6 !important;
}

WordCarousel {
  height: auto;
}

WordCarousel > #root {
  height: auto;
}

#carousel_control {
  height: auto;
  margin-bottom: 1;
}

CarouselElement {
  padding: 1;
  width:auto;
  height:auto;
  min-width: 15;
  background: $surface;
  margin: 1;
}

CarouselElement > #root > Label {
  text-align: center;
}


CarouselElement > #root > .element_text {
  color: #ffffff;
  text-style: none;
  text-align: center;
}

CarouselElement > #root {
  align-horizontal: center;
}

.active {
  background:rgb(255, 63, 121);
  padding: 0 1;
}

.active > .element_text {
  text-style: bold;
  margin-top: 1;
  margin-bottom: 1;
}

.lyric-line-active {
  color: rgb(255, 63, 121)
}